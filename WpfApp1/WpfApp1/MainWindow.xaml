<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Ellipse x:Name="red" Fill="#FF646464" HorizontalAlignment="Center" Height="100" Margin="10,10,685,312.5" Stroke="Black" Width="100" RenderTransformOrigin="0.09,-0.138" VerticalAlignment="Center"/>
        <Ellipse x:Name="yellow" Fill="#FF646464" HorizontalAlignment="Center" Height="100" Margin="10,137,685,185.5" Stroke="Black" Width="100" VerticalAlignment="Center"/>
        <Ellipse x:Name="green" Fill="#FF646464" HorizontalAlignment="Center" Height="100" Margin="10,258,685,64.5" Stroke="Black" Width="100" RenderTransformOrigin="0.434,-0.797" VerticalAlignment="Center"/>
        <Button x:Name="button" Content="прапусти красный крестик" HorizontalAlignment="Center" Margin="10,10,0,0" VerticalAlignment="Center" Width="267" Height="42" FontSize="20" Click="Button_Click"/>
        <Label x:Name="label" Content="ХА! теперь жди :)" HorizontalAlignment="Left" Margin="269,258,0,102.5" Height="62" Width="267" FontSize="20"/>

    </Grid>
</Window>
